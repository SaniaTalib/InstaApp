<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDarkk"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">


    <TextView
            android:text="settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:id="@+id/textView8"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:text="Update my Email Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_email_settings"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/montserrat_regular"

            android:textSize="15sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            />

    <TextView
            android:text="Update my Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_password_settings"
            android:textColor="@color/textColor2"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="@+id/update_email_settings"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/update_email_settings"
            />
</android.support.constraint.ConstraintLayout>