<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".SignupActivity"
        android:background="@color/colorPrimaryDarkk"
        >

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:background="@color/colorPrimary"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:id="@+id/signup_user_name"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/signup_username"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                />

        <EditText

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:background="@color/colorPrimary"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/signup_email"
                app:layout_constraintStart_toStartOf="@+id/signup_user_name"
                app:layout_constraintEnd_toEndOf="@+id/signup_user_name"
                android:hint="@string/signup_email"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                />

        <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:background="@color/colorPrimary"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/signup_password"
                app:layout_constraintStart_toStartOf="@+id/signup_email"
                app:layout_constraintEnd_toEndOf="@+id/signup_email"
                app:layout_constraintHorizontal_bias="0.0"
                android:hint="@string/signup_password"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                />

        <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:background="@color/colorPrimary"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/signup_cnfirm_password"
                app:layout_constraintStart_toStartOf="@+id/signup_password"
                app:layout_constraintEnd_toEndOf="@+id/signup_password"
                app:layout_constraintHorizontal_bias="0.0"
                android:hint="@string/confirmpassword"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                />

        <TextView
                android:text="Choose a username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/signup_user_name"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                />

        <TextView
                android:text="Enter your email address"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_bold"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/signup_email"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/signup_user_name"
                app:layout_constraintEnd_toEndOf="@+id/signup_email"
                app:layout_constraintHorizontal_bias="0.0"
                />

        <TextView
                android:text="choose password"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_bold"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:id="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/signup_password"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/signup_email"
                app:layout_constraintEnd_toEndOf="@+id/signup_password"
                app:layout_constraintHorizontal_bias="0.0"
                />

        <TextView
                android:text="cnfirm password"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_bold"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:id="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/signup_cnfirm_password"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/signup_password"
                />


        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/signup_button"
                android:text="signup"
                android:textColor="@color/textColor2"
                android:background="@drawable/buttons_border"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox"
                app:layout_constraintStart_toStartOf="@+id/checkBox"
                app:layout_constraintEnd_toEndOf="@+id/signup_cnfirm_password"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                />

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:textColor="@color/grey"
                android:background="@android:color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/signup_cnfirm_password"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/agree1"
                android:textColor="@color/grey"
                app:layout_constraintTop_toTopOf="@+id/checkBox"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox"
                app:layout_constraintStart_toEndOf="@+id/checkBox"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/textView9"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/termsconditions"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/textView9"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                app:layout_constraintEnd_toEndOf="@+id/signup_cnfirm_password"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                />

        <Button
                android:text="login with instagram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/insta_button"
                android:textColor="@color/textColor2"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@drawable/insta_gradient"
                app:layout_constraintStart_toStartOf="@+id/signup_button"
                app:layout_constraintEnd_toEndOf="@+id/signup_button"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/signup_button"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp"
                />

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@+id/signup_password"
                app:layout_constraintBottom_toTopOf="@+id/signup_cnfirm_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:indeterminate="true"
                />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>

