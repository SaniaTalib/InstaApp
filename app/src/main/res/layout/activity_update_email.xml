<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDarkk"
        tools:context=".UpdateEmailActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/update_email_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="#fff"
            app:subtitleTextColor="#f5fbff"
            android:padding="1dp"
    />

    <TextView
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Email Address"
            android:textColor="@color/textColor"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/update_email_toolbar"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="5dp"
            android:background="@color/colorPrimary"
            android:hint="Email Address"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey"
            android:id="@+id/update_email_address"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="28dp"
            app:layout_constraintStart_toStartOf="@+id/set" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/set"/>

    <Button
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/update_email_btn"
            android:background="@drawable/buttons_border"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textColor="@color/textColor2"
            android:text="Save Settings"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter crunnt password"
            android:textColor="@color/textColor"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/update_email_address"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/update_email_address"
            />

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/current_password"
            android:paddingLeft="5dp"
            android:background="@color/colorPrimary"
            android:hint="Password"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey"
            app:layout_constraintEnd_toEndOf="@+id/update_email_address"
            app:layout_constraintStart_toStartOf="@+id/update_email_address"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="0.0"
            />


</android.support.constraint.ConstraintLayout>