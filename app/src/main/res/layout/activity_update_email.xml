<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDarkk"
        tools:context=".UpdateEmailActivity">


    <android.support.v7.widget.Toolbar
            android:id="@+id/update_email_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/gold"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                />

    </android.support.v7.widget.Toolbar>

    <TextView
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter New Email Address"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/update_email_toolbar"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            />

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="5dp"
            android:background="@color/colorPrimary"
            android:hint="New Email Address"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@android:color/white"
            android:id="@+id/update_email_address"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="@+id/set"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/set"
            />

    <TextView
            android:id="@+id/setcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm New Email Address"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/update_email_address"
            />

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="5dp"
            android:background="@color/colorPrimary"
            android:hint="Confirm New Email Address"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@android:color/white"
            android:id="@+id/update_confirm_email_address"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="@+id/set"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/setcon"
            android:layout_marginTop="16dp"
            />

    <Button
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/update_email_btn"
            android:background="@drawable/buttons_border"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textColor="@color/textColor2"
            android:text="Save Settings"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter current password"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/update_email_address"
            app:layout_constraintEnd_toEndOf="@+id/update_email_address"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/update_confirm_email_address"
            />

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/current_password"
            android:paddingLeft="5dp"
            android:background="@color/colorPrimary"
            android:hint="Password"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/update_email_address"
            app:layout_constraintStart_toStartOf="@+id/update_email_address"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="0.0"
            />


    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            />

</android.support.constraint.ConstraintLayout>