<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDarkk"
        android:layout_height="match_parent"
        tools:context=".UpdatePasswordActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/update_password_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="#fff"
            app:subtitleTextColor="#f5fbff"
            android:padding="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    <TextView
            android:text="Existing password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/update_password_toolbar" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"/>


    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/update_existing_password"
            android:hint="Enter your existing password"
            android:paddingLeft="5dp"
            android:textColor="@color/textColor2"
            android:background="@color/colorPrimary"
            android:textColorHint="@color/textColor2"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            app:layout_constraintHorizontal_bias="0.0"/>


    <TextView
            android:text="New password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            app:layout_constraintStart_toStartOf="@+id/update_existing_password" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/update_existing_password"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/update_new_password"
            android:hint="Enter a new password"
            android:paddingLeft="5dp"
            android:textColor="@color/textColor2"
            android:background="@color/colorPrimary"
            android:textColorHint="@color/textColor2"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="Confirm New password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            app:layout_constraintStart_toStartOf="@+id/update_new_password"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/update_new_password"/>


    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/update_confirm_password"
            android:hint="Confirm your new password"
            android:paddingLeft="5dp"
            android:textColor="@color/textColor2"
            android:background="@color/colorPrimary"
            android:textColorHint="@color/textColor2"

            app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp"/>


    <Button
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/update_password_btn"
            android:background="@drawable/buttons_border"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textColor="@color/textColor2"
            android:text="save settings"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>